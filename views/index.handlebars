
<div class='container'>
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
        {{!-- <img src="../public/assets/img/burger.jpn.jpg"> --}}
      <h1>Eat-Da-Burger!</h1>  
    </div>
    <br><br><br>  
    <div class="col-xs-9 text-center" class="task">
   
        <div class="row">
                
            {{#each burger_data}}
                {{#unless this.devoured}}
            <div class="col-xs-7 text-center">
                <pre id="na">{{this.id}}.{{this.burger_name}}</pre>
            </div>
         
     <div class="col-xs-3 text-center">
          <form method="POST" action="/burgers/update?_method=PUT"
           class="button-size">
             <input type="hidden" name="id" type="text"
             value={{this.id}}>
             <br>
             <button type="submit" class="btn btn-default">
             DEVOUR IT!</button>
           </form>
     </div> 
    {{/unless}}       
    {{/each}}
        </div>
    </div>
  
    <div class="col-xs-6 text-center" class="task">
        {{#each burger_data}}
            {{#if this.devoured}}
         <input id='pos' class="form-control" type="text" placeholder="{{this.id}}.{{this.burger_name}}" readonly>
            {{/if}}
        {{/each}}
    </div>
</div>
</div>

<br><br>
<div class="container"> 
    <div class="row">
         <div class="col-xs-12 text-center enter_section">
    <form role= 'form' method="POST">
        <div class="form-group">
            {{!-- <label for="data">Burger Name:</label> --}}
            <input type="text" id="data" name="burger_name" value="">
            <br><br>
        <button id="add-btn" class="btn btn-primary" type="submit"><strong>Add Burger</strong</button>
         </div>
    </form>
      
     <h4><strong>Please enter a burger you would like to eat!</strong></h4>
</div>  
</div>
</div>

<script type="text/javascript">
    // javascript to get the data and post it to the route
    $("#add-btn").on("click", function(event) {
     
      event.preventDefault();
      var test = $("#data").val().trim();
  
      var newBurger = {
        burger_name: $("#data").val().trim()
      };
      
      $.post("/", newBurger)
        .then(function(data) {
            location.reload();
        });
    });




  </script>






